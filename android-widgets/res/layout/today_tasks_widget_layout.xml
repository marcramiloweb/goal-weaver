<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“‹ Tareas de Hoy"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tasks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Task 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/task1_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_circle"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/task1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Task 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/task2_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_circle"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/task2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Task 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/task3_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_circle"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/task3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Task 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/task4_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_circle"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/task4_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>

</LinearLayout>
